<%= form_for @exercise, :html => {class: 'form-horizontal row-fluid'} do |f| %>
  <% if @exercise.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
      <% @exercise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <div class="field">
      <%= f.label :date_id, class: 'control-label' %>
      <div class="controls">
        <%= f.select :date_id, @days, class: 'span8'%>
      </div>
    </div>
  </div>

  <div class="control-group">
    <div class="field">
      <%= f.label :exercise_type_id, class: 'control-label' %>
      <div class="controls">
        <%= f.select :exercise_type_id, @options, class: 'span8' %>
      </div>
    </div>
  </div>

  <div class="control-group">
    <div class="field">
      <%= f.label :duration, class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :duration, class: 'span8' %>
      </div>
    </div>
  </div>

  <div class="control-group align-center">
    <div class="actions">
      <%= f.submit class: "btn-primary" %>
    </div>
  </div>

<% end %>
<br>
