<%= form_for @step,  :html => {class: 'form-horizontal row-fluid'} do |f| %>
  <% if @step.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step count from being saved:</h2>

      <ul>
        <% @step.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="control-group">
    <div class="field">
      <%= f.label :date_id, class: 'control-label' %>
      <div class="controls">
        <%= f.select :date_id, @days, class: 'span8'%>
      </div>
    </div>
  </div>

  <div class="control-group">
    <div class="field">
      <%= f.label :step_count, class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :step_count, class: 'span8' %>
      </div>
    </div>
  </div>

  <div class="control-group align-center">
    <div class="center">
      <div class="actions">
        <%= f.submit class: "btn-primary" %>
      </div>
    </div>
  </div>

<% end %>
<br>
