<%= form_for @weight, :html => {class: 'form-horizontal row-fluid'} do |f| %>
    <% if @weight.errors.any? %>
      <div class="alert alert-error">
        <h2><%= pluralize(@weight.errors.count, "error") %> prohibited this record from being saved:</h2>

        <ul>
          <% @weight.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <div class="field">
        <%= f.label :date_id, class: 'control-label' %>
        <div class="controls">
          <%= f.select :date_id, @days, class: 'span8'%>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="field">
        <%= f.label :weight, class: 'control-label' %>
        <div class="controls">
          <%= f.number_field :weight, class: "span8" %>
        </div>
      </div>
    </div>

    <div class="control-group align-center">
      <div class="actions">
        <%= f.submit class: "btn-primary" %>
      </div>
    </div>
<% end %>
