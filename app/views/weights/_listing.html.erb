<h4>Listing Weights</h4>

<% if @weights.count > 0 %>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Weight</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @weights.each do |weight| %>
        <tr>
          <td><%= weight.day ? weight.day.date : 0 %></td>
          <td><%= weight.weight %></td>
          <td><%= link_to 'Show', weight %></td>
          <td><%= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% else %>
  <p>No weights</p>
<% end %>
